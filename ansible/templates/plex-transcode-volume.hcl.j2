# Dynamic host volume for Plex transcode data
name      = "plex-transcode"
type      = "host"
plugin_id = "mkdir"

capability {
  access_mode     = "single-node-writer"
  attachment_mode = "file-system"
}

constraint {
  attribute = "${attr.unique.hostname}"
  value     = "{{ target_hostname | default(ansible_hostname) }}"
}

parameters {
  path = "{{ plex_transcode_dir }}"
  mode = "0755"
  uid  = "{{ user_uid }}"
  gid  = "{{ group_gid }}"
}
